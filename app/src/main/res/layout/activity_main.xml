<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.mauriced.scrumpoker.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/buttonshape"
        android:text="0"
        app:layout_constraintTop_toTopOf="@+id/button1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonq"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:background="@drawable/buttonshape"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/buttonshape"
        android:text="2"
        app:layout_constraintTop_toTopOf="@+id/button1"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/buttoncoffee"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/buttonshape"
        android:text="3"
        app:layout_constraintTop_toTopOf="@+id/button5"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonq"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494"/>


    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/buttonshape"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button5"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/buttoncoffee"/>

    <Button
        android:id="@+id/buttonq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/buttonshape"
        android:text="/?"
        app:layout_constraintBottom_toBottomOf="@+id/buttonqqq"
        app:layout_constraintRight_toLeftOf="@id/buttonqqq"
        tools:layout_editor_absoluteX="5dp"/>

    <Button
        android:id="@+id/buttonqqq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:background="@drawable/buttonshape"
        android:text="/???"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"/>

    <Button
        android:id="@+id/buttoncoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="coffee"
        app:layout_constraintLeft_toRightOf="@+id/buttonqqq"
        android:layout_marginLeft="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonqqq"
        android:layout_marginBottom="0dp"/>


</android.support.constraint.ConstraintLayout>
